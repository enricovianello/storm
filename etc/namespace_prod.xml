     <space-token-description>LHCb_DST</space-token-description>
      <root>/storage/gpfs_storm/grid/lcg/lhcb</root>
      <filesystem-driver>it.grid.storm.filesystem.swig.gpfs</filesystem-driver>
      <spacesystem-driver>it.grid.storm.filesystem.GPFSSpaceSystem</spacesystem-driver>
      <authorization-source>permit-all</authorization-source>
      <properties>
          <RetentionPolicy>replica</RetentionPolicy>
          <AccessLatency>online</AccessLatency>
          <ExpirationMode>neverExpire</ExpirationMode>
          <TotalOnlineSize unit="GB">500</TotalOnlineSize>
          <TotalNearlineSize unit="GB">0</TotalNearlineSize>
      </properties>
      <capabilities>
        <aclMode>AoT</aclMode>
        <trans-prot>
          <prot name="file">
            <schema>file</schema>
          </prot>
          <prot name="gsiftp">
            <schema>gsiftp</schema>
            <host>storm01.cr.cnaf.infn.it</host>
            <port>2811</port>
          </prot>
          <prot name="rfio">
            <schema>rfio</schema>
            <host>storm01.cr.cnaf.infn.it</host>
            <port>5001</port>
          </prot>
        </trans-prot>
     </capabilities>
      <defaults-values>
        <space lifetime="86400" type="volatile" guarsize="10487560" totalsize="10487560"/>
        <file lifetime="3600" type="volatile"/>
      </defaults-values>
    </filesystem>
