<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="PROCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${user.dir}/unittest/log/test.log
		</File>
		<ImmediateFlush>true</ImmediateFlush>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${user.dir}/unittest/log/test-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date{HH:mm:ss.SSS} - %level [%logger{0}:%line] - %msg%n</Pattern>
        </layout>
    </appender>
   
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    	<layout class="ch.qos.logback.classic.PatternLayout">
      		<Pattern>%date{HH:mm:ss.SSS} - %level [%logger{0}:%line] - %msg%n</Pattern>
    	</layout>
  	</appender>

	<logger name="component" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="PROCESS" />
	</logger>

	<root level="DEBUG">
	    <appender-ref ref="STDOUT" />
	</root>
     
</configuration>
