<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xs:element name="aclMode">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:enumeration value="AoT"/>
				<xs:enumeration value="JiT"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:complexType name="app-ruleType">
		<xs:sequence>
			<xs:element name="subjects" type="subjectsType"/>
			<xs:element ref="approachable-fs"/>
			<xs:element ref="space-rel-path"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:NMTOKEN" use="required"/>
	</xs:complexType>
	<xs:element name="approachable-fs" type="xs:string"/>
	<xs:complexType name="approachable-rulesType">
		<xs:sequence>
			<xs:element name="app-rule" type="app-ruleType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="capabilitiesType">
		<xs:sequence>
			<xs:element ref="aclMode"/>
			<xs:element name="trans-prot" type="trans-protType"/>
			<xs:element ref="filetype"/>
			<xs:element ref="spacetype"/>
			<xs:element ref="spaceLifeTimeMAX"/>
			<xs:element ref="spaceTotSizeMAX"/>
			<xs:element ref="spaceGuarSizeMAX"/>
			<xs:element ref="fileLifeTimeMAX"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="defaults-valuesType">
		<xs:sequence>
			<xs:element name="space" type="spaceType"/>
			<xs:element name="file" type="fileType"/>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="dn" type="xs:string"/>
	<xs:complexType name="fileType">
		<xs:attribute name="lifetime" type="xs:long" use="required"/>
		<xs:attribute name="type" type="xs:string" use="required"/>
	</xs:complexType>
	<xs:element name="fileLifeTimeMAX" type="xs:long"/>
	<xs:complexType name="filesystemType">
		<xs:sequence>
			<xs:element ref="root" minOccurs="1" maxOccurs="1"/>
			<xs:element ref="filesystem-driver" minOccurs="1" maxOccurs="1"/>
			<xs:element ref="spacesystem-driver" minOccurs="1" maxOccurs="1"/>
			<xs:element name="defaults-values" type="defaults-valuesType" minOccurs="1" maxOccurs="1"/>
			<xs:element name="capabilities" type="capabilitiesType" minOccurs="1" maxOccurs="1"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:NMTOKEN" use="required"/>
		<xs:attribute name="fs_type" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:NMTOKEN">
					<xs:enumeration value="ext3"/>
					<xs:enumeration value="gpfs"/>
					<xs:enumeration value="xfs"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
	</xs:complexType>
	<xs:element name="filesystem-driver" nillable="false">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:enumeration value="it.grid.storm.filesystem.swig.posixfs"/>
				<xs:enumeration value="it.grid.storm.filesystem.swig.gpfs"/>
				<xs:enumeration value="it.grid.storm.filesystem.swig.gpfs23"/>
				<xs:enumeration value="it.grid.storm.filesystem.swig.xfs"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:complexType name="filesystemsType">
		<xs:sequence>
			<xs:element name="filesystem" type="filesystemType" minOccurs="1" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="filetype" type="xs:string"/>
	<xs:element name="host" type="xs:string"/>
	<xs:complexType name="map-ruleType">
		<xs:sequence>
			<xs:element ref="stfn-root" minOccurs="1" maxOccurs="1"/>
			<xs:element ref="mapped-fs" minOccurs="1" maxOccurs="1"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:NMTOKEN" use="required"/>
	</xs:complexType>
	<xs:element name="mapped-fs" type="xs:string"/>
	<xs:complexType name="mapping-rulesType">
		<xs:sequence>
			<xs:element name="map-rule" type="map-ruleType" minOccurs="1" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="namespace">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="filesystems" type="filesystemsType" minOccurs="1" maxOccurs="1"/>
				<xs:element name="mapping-rules" type="mapping-rulesType" minOccurs="1" maxOccurs="1"/>
				<xs:element name="approachable-rules" type="approachable-rulesType" minOccurs="1" maxOccurs="1"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="port" type="xs:string"/>
	<xs:complexType name="protType">
		<xs:sequence>
			<xs:element ref="schema" minOccurs="1" maxOccurs="1"/>
			<xs:element ref="host" minOccurs="0" maxOccurs="1"/>
			<xs:element ref="port" minOccurs="0" maxOccurs="1"/>
		</xs:sequence>
		<xs:attribute name="name" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:NMTOKEN">
					<xs:enumeration value="file"/>
					<xs:enumeration value="gsiftp"/>
					<xs:enumeration value="rfio"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
	</xs:complexType>
	<xs:element name="root" type="xs:string" nillable="false"/>
	<xs:element name="schema">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:enumeration value="file"/>
				<xs:enumeration value="gsiftp"/>
				<xs:enumeration value="rfio"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:complexType name="spaceType">
		<xs:attribute name="lifetime" type="xs:long" use="required"/>
		<xs:attribute name="type" type="xs:string" use="required"/>
		<xs:attribute name="guarsize" type="xs:long" use="required"/>
		<xs:attribute name="totalsize" type="xs:long" use="required"/>
	</xs:complexType>
	<xs:element name="space-rel-path" type="xs:string"/>
	<xs:element name="spaceGuarSizeMAX" type="xs:long"/>
	<xs:element name="spaceLifeTimeMAX" type="xs:long"/>
	<xs:element name="spaceTotSizeMAX" type="xs:long"/>
	<xs:element name="spacesystem-driver" nillable="false">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:enumeration value="it.grid.storm.filesystem.GPFSSpaceSystem"/>
				<xs:enumeration value="it.grid.storm.filesystem.MockSpaceSystem"/>
                                <xs:enumeration value="it.grid.storm.filesystem.XFSSpaceSystem"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="spacetype" type="xs:string"/>
	<xs:element name="stfn-root" type="xs:string"/>
	<xs:complexType name="subjectsType">
		<xs:sequence>
			<xs:element ref="dn"/>
			<xs:element ref="vo-name" minOccurs="0"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="trans-protType">
		<xs:sequence>
			<xs:element name="prot" type="protType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="vo-name" type="xs:string"/>
</xs:schema>
