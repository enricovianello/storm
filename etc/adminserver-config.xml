<?xml version="1.0"?>
<quickserver>
	<name>Namespace Admin Server v 1.0</name>
	<port>4123</port>
	<bind-address>0.0.0.0</bind-address>

	<!-- business logic classes -->
	<client-event-handler>
		it.grid.storm.namespace.admin.server.NSAdminCommandHandler
	</client-event-handler>
	<client-extended-event-handler>
		it.grid.storm.namespace.admin.server.NSAdminExtendedEventHandler
	</client-extended-event-handler>
	<client-command-handler>
		it.grid.storm.namespace.admin.server.NSAdminCommandHandler
	</client-command-handler>
	<client-authentication-handler>
		it.grid.storm.namespace.admin.server.NSAuthenticatorDBBased
	</client-authentication-handler>
	<client-data>
		it.grid.storm.namespace.admin.server.NSClientData
	</client-data>

	<!-- business logic classes -->

        <server-hooks>
          <class-name>it.grid.storm.namespace.admin.server.PrepareHook</class-name>
        </server-hooks>

        <init-server-hooks>
          <class-name>it.grid.storm.namespace.admin.server.SetupLoggingHook</class-name>
        </init-server-hooks>

	<server-mode>
		<blocking>false</blocking>
	</server-mode>

	<default-data-mode>
		<data-type-in>String</data-type-in>
		<data-type-out>String</data-type-out>
	</default-data-mode>

	<!-- in milliseconds -->
	<timeout>60000</timeout>
	<max-connection>5</max-connection>
	<max-auth-try>5</max-auth-try>

	<console-logging-level>INFO</console-logging-level>
	<console-logging-formatter>
		org.quickserver.util.logging.SimpleConsoleFormatter
	</console-logging-formatter>

	<communication-logging>
		<enable>false</enable>
	</communication-logging>

	<application-configuration>
		<!--<prompt-type>gui</prompt-type>-->
		<prompt-type>console</prompt-type>
		<!--
		<property>
			<property-name>APP_PARAM1</property-name>
			<property-value>test value</property-value>
		</property>
		<property>
			<property-name>APP_SECRET1</property-name>
		</property>
		-->
	</application-configuration>

	<access-constraint>
	  <ip-filter>
	    <enable>false</enable>
	    <allow-access>false</allow-access>
	    <ip-collection>
		  <client-ip-address>127.0.0.1</client-ip-address>
	    </ip-collection>
	  </ip-filter>
	</access-constraint>


	<application-jar-path>../build/storm-backend.jar</application-jar-path>


	<advanced-settings>
		<charset>ISO-8859-1</charset>
		<use-direct-byte-buffer>true</use-direct-byte-buffer>
		<!--<byte-buffer-size>61440</byte-buffer-size>-->
		<backlog>1024</backlog>
		<socket-linger>-1</socket-linger>
		<debug-non-blocking-mode>false</debug-non-blocking-mode>
	</advanced-settings>

        <secure>
		<enable>false</enable>
		<load>false</load>
		<port>8443</port>
		<protocol>SSLv3</protocol>
		<client-auth-enable>false</client-auth-enable>
		<secure-store>
			<type>JKS</type>
			<algorithm>SunX509</algorithm>
			<!--<provider>SUN</provider>-->
			<key-store-info>
				<store-file>users.keystore</store-file>
				<!--If <store-password> is not specified QuickServer will prompt-->
				<!--<store-password>userspass</store-password>-->
				<!--If <key-password> is not specified QuickServer will prompt-->
				<!--<key-password>userkpass</key-password>-->
			</key-store-info>
		</secure-store>
	</secure>
</quickserver>
